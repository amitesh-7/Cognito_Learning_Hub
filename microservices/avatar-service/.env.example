# Server Configuration
PORT=3010
NODE_ENV=development
SERVICE_NAME=avatar-service

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cognito_learning_hub
MONGO_URI=mongodb://localhost:27017/cognito_learning_hub

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# OpenAI Configuration (for avatar generation and voice)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_VOICE_MODEL=tts-1
OPENAI_VOICE_TYPE=alloy

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Avatar Settings
MAX_AVATAR_SIZE=5242880
# Maximum avatar file size: 5MB (5242880 bytes)
ALLOWED_AVATAR_TYPES=image/jpeg,image/png,image/webp,image/gif
AVATAR_CACHE_TTL=3600
# Avatar data cache: 1 hour (3600 seconds)

# AI Generation Settings
AI_TIMEOUT=30000
# AI request timeout: 30 seconds (30000 ms)
MAX_RETRIES=3
# Maximum number of retries for AI requests

# Evolution Settings
EVOLUTION_THRESHOLD_XP=1000
# XP required for avatar evolution
EVOLUTION_THRESHOLD_LEVEL=5
# Level required for avatar evolution
EVOLUTION_COOLDOWN=86400
# Evolution cooldown: 24 hours (86400 seconds)

# Voice Settings
VOICE_CACHE_TTL=604800
# Voice cache: 7 days (604800 seconds)
MAX_VOICE_LENGTH=500
# Maximum characters for voice synthesis

# Learning Style Settings
LEARNING_STYLE_UPDATE_INTERVAL=300
# Learning style analysis interval: 5 minutes (300 seconds)
MIN_INTERACTIONS_FOR_STYLE=10
# Minimum interactions before analyzing learning style

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# Rate limit window: 15 minutes (900000 ms)
RATE_LIMIT_MAX_REQUESTS=1000
# Maximum requests per window per IP

# CORS Settings
CORS_ORIGIN=http://localhost:5173
# Frontend URL for CORS

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# Maximum file upload size: 10MB (10485760 bytes)

# Logging
LOG_LEVEL=info
# Available: error, warn, info, debug

# Service Discovery (for microservices communication)
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
QUIZ_SERVICE_URL=http://localhost:3002
GAMIFICATION_SERVICE_URL=http://localhost:3008
